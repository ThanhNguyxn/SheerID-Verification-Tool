{
    "manifest_version": 3,
    "name": "SheerID Verification Tool",
    "version": "2.0.0",
    "description": "Unified SheerID verification tool for Spotify, YouTube, Google One, Veterans, and more",
    "author": "ThanhNguyxn",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "sidePanel"
    ],
    "host_permissions": [
        "https://*.sheerid.com/*",
        "https://services.sheerid.com/*",
        "https://*.spotify.com/*",
        "https://*.youtube.com/*",
        "https://*.google.com/*",
        "https://*.openai.com/*",
        "https://chatgpt.com/*",
        "https://*.canva.com/*",
        "https://*.bolt.new/*",
        "https://api.mail.tm/*",
        "https://www.1secmail.com/*",
        "https://tinyhost.shop/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://services.sheerid.com/*",
                "https://*.sheerid.com/*",
                "https://chatgpt.com/*",
                "https://*.openai.com/*"
            ],
            "js": [
                "data/universities.js",
                "data/schools.js",
                "lib/anti-detect.js",
                "lib/doc-generator.js",
                "lib/utils.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}
